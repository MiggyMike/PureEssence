// for rating system
$(document).on('turbolinks:load', function(){
  $('.rating').raty({
    starHalf: '<%= asset_path 'raty/star-half.png' %>',
    starOff: '<%= asset_path 'raty/star-off.png' %>',
    starOn: '<%= asset_path 'raty/star-on.png' %>',
    scoreName: 'comment[rating]'
  });

  $('.rated').raty({
    starHalf: '<%= asset_path 'raty/star-half.png' %>',
    starOff: '<%= asset_path 'raty/star-off.png' %>',
    starOn: '<%= asset_path 'raty/star-on.png' %>',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
});
