<div class="card shadow mb-3 commentbox">
  <div class="card  text-center">
    <div class="card-body">
      <% if signed_in? %>
        <h5 class="card-header border-light">Comment</h5>
        <br>
        <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
          <div>
            <%= f.text_area :body, class:"form-control", id:"exampleFormControlTextarea1", rows:"3" %>
          </div>
          <div class="rating">
          </div>
          <br>
          <div>
            <%= f.submit "Submit", class:"btn btn-outline-primary btn-sm" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
