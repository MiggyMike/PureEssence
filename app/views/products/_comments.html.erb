<div>
  <div class="product-reviews shadow p-3 mb-5 bg-white rounded">
    <% @comments.each do |comment| %>
      <div class="container">
        <hr>
        <div>
        <p><%= comment.body %></p>
        <!-- <p><%= "Rating: #{comment.rating}/5" %></p> -->
        <p class="rated" data-score="<%= comment.rating %>"></p>
        <p><%= comment.user.first_name %> <br><small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
