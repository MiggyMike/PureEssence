<div class="container">
  <div class="row">

    <div class="container">
      <p id="notice"><%= notice %></p>

      <div class="card shadow mb-3 productbox">
        <div class="row no-gutters">
          <div class="col-md-3">
            <%= image_tag('Dropper-Bottle-Mockup-SM2.jpg', class: 'img-fluid img-zoom', data_zoom_image: '@product.product_image.url')%>
          </div>
          <div class="col-md-9">
            <div class="card-body">
              <% cache @product do %>
              <h5 class="card-title"><%= @product.name %></h5>
              <p class="card-text"><%= @product.scents %></p>
              <p class="card-text"><%= @product.description %></p>
              <% end %>
              <p class="card-text">Price:<strong><%= number_to_currency(@product.price, class:"price")%></strong></p>
              <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
              <p>Average Rating:</p>
              <p class="rated" id="average_rating" data-score="<%= @product.average_rating %>"></p>
              <%= form_with(url: '/payments/create') do |form| %>
                <%= render partial: "shared/stripe_checkout_button" %>
                <%= hidden_field_tag(:product_id, @product.id) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <% if user_signed_in? && current_user.admin? %>
        <div class="link_to">
          <%= link_to 'Edit', edit_product_path(@product) %> |
          <%= link_to 'Back', products_path %>
        </div>
        <% end %>

      <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>

      <% if user_signed_in? && current_user.present? %>
        <%= render "new_comment"%>
      <% end %>


      <div class="comments">
        <%= render 'comments' %>
      </div>

      <!--PAGINATION -->
      <div class="pagination justify-content-center">
        <%= will_paginate @comments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer%>
      </div>

    </div>
  </div>
</div>
