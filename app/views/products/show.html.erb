<div class="container">
  <div class="row">

    <div class="container">
      <p id="notice"><%= notice %></p>

      <div class="card shadow mb-3 productbox">
        <div class="row no-gutters">
          <div class="col-md-4">
            <%= image_tag(@product.image_url) %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= @product.name %></h5>
              <p class="card-text"><%= @product.scents %></p>
              <p class="card-text"><%= @product.description %></p>
              <p class="card-text">Price:<strong><%= number_to_currency(@product.price, class:"price")%></strong></p>
              <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
              <p>Average Rating:</p>
              <p class="rated" data-score="<%= @product.average_rating %>"></p>
            </div>
          </div>
        </div>
      </div>

      <div class="link_to">
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>
      </div>

      <%= render "new_comment"%>



      <div class="comments">
        <%= render 'comments' %>
      </div>

      <!--PAGINATION -->
      <div class="pagination justify-content-center">
        <%= will_paginate @comments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer%>
      </div>

    </div>
  </div>
</div>
